{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Resort Reservation",
  "type": "object",
  "properties": {
    "id": {
      "oneOf": [
        { "type": "string" },
        { "type": "number" }
      ]
    },
    "guest_name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "phone": {
      "type": "string",
      "pattern": "^$|^09[0-9]{9}$",
      "description": "Philippine phone number format: empty string or 11 digits starting with 09"
    },
    "street_address": {
      "type": "string",
      "maxLength": 200
    },
    "municipality": {
      "type": "string",
      "maxLength": 100
    },
    "region": {
      "type": "string",
      "maxLength": 100
    },
    "country": {
      "type": "string",
      "maxLength": 100
    },
    "resort_name": {
      "type": "string",
      "enum": [
        "Arcadia Beach Resort",
        "Kuya Boy Beach Resort",
        "Blue Horizon Resort",
        "White Sand Paradise",
        "Mountain View Villa"
      ],
      "description": "Must be one of the approved resort names"
    },
    "checkin_date": {
      "type": "string",
      "format": "date"
    },
    "checkout_date": {
      "type": "string",
      "format": "date"
    },
    "guests": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100
    },
    "payment_gateway": {
      "oneOf": [
        { "type": "string", "enum": [""] },
        {
          "type": "string",
          "enum": [
            "Credit Card",
            "GCash",
            "PayPal",
            "Bank Transfer",
            "BANCO DE ORO",
            "Metrobank",
            "BDO"
          ]
        }
      ],
      "description": "Must be empty string or one of the approved payment gateways"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "guest_name",
    "email",
    "resort_name",
    "checkin_date",
    "checkout_date",
    "guests"
  ],
  "additionalProperties": false
}
